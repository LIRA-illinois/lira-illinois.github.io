---
import FundingImage from './FundingImage.astro';
interface Props {
  fundingSlugs: string[];
}
const { fundingSlugs } = Astro.props;
---

<p>We gratefully acknowledge our current and past funding sources.</p>
<div class="funding-images">
  {
    fundingSlugs.map((fundingSlug) => {
      return (
        <FundingImage url={`/src/assets/funding/${fundingSlug}`} alt={fundingSlug.toUpperCase()} height={75} />
      );
    })
  }
</div>
<style>
  .funding-images {
    display: flex;
    flex-wrap: wrap;
    gap: 2em;
    justify-content: space-between;
    margin-top: 1em;
  }
</style>
