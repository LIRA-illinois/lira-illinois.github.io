---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  url: string;
  alt: string;
  height: number;
}

const { url, alt, height } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/funding/*.{jpeg,jpg,png,gif,webp}",
);
if (!images[url])
  throw new Error(
    `"${url}" does not exist in glob: "/src/assets/funding/*.{jpeg,jpg,png,gif}"`,
  );
---

<Image src={images[url]()} alt={alt} height={height} />
