---
import { Picture } from "astro:assets";
const { title, subtitle, heroUrl, heroAlt, heroWidth } = Astro.props;
---

<div class="hero-container">
  <div class="hero-text">
    <h1>{title}</h1>
    <div class="hero-subtitle">
      {subtitle && <h4>{subtitle}</h4>}
    </div>
  </div>
  <div class="hero-image">
    <Picture src={heroUrl} alt={heroAlt} layout="constrained" width={400} />
  </div>
</div>
<style>
  .hero-container {
    display: flex;
    flex: 1;
    margin: 0 auto;
    text-align: left;
  }
  .hero-text {
    display: flex;
    flex-direction: column;
    /* font-size: 2.28065625rem; */
    gap: 1em;
    padding-right: 1em;
  }
  @media (max-width: 820px) {
    .hero-container {
      flex-direction: column;
    }
  }
</style>
