---
import { Image } from "astro:assets";
const { title, subtitle, heroUrl, heroAlt } = Astro.props;
---

<div class="hero-header">
  <div class="hero-caption">
    <h1>{title}</h1>
    <div class="hero-subtitle">
      {subtitle && <h4>{subtitle}</h4>}
    </div>
  </div>
  <div class="hero-image">
    <Image src={heroUrl} alt={heroAlt} width={400} />
  </div>
</div>
<style>
  .hero-header {
    display: flex;
    gap: 2em;
    margin: 0 auto;
  }
  .hero-caption {
    display: flex;
    flex-direction: column;
    gap: 1em;
  }
  @media (max-width: 820px) {
    .hero-header {
      flex-direction: column;
    }
  }
</style>
