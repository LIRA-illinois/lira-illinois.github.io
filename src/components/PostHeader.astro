<div class="header-container">
  {
    imageUrl && (
      <div class="image-container">
        <Image src={images[imageUrl]()} alt={imageAlt} />
      </div>
    )
  }
  <h1>{title}</h1>
  <div class="caption-container">
    <h4>{subtitle}</h4>
    {
      date && !dateUpdated && (
        <h5>
          {date &&
            date.toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })}
        </h5>
      )
    }
    {
      dateUpdated && (
        <h5>
          Last updated:
          {dateUpdated &&
            dateUpdated.toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })}
        </h5>
      )
    }
    <hr />
  </div>
</div>
