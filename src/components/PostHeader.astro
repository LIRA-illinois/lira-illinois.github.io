---
import { Image } from "astro:assets";

const { title, subtitle, date, dateUpdated, imageUrl, imageAlt, imageSmall } =
  Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/research/*.{jpeg,jpg,png,gif,svg,webp}",
);
if (imageUrl && !images[imageUrl])
  throw new Error(
    `"${imageUrl}" does not exist in glob: "/src/assets/research/*.{jpeg,jpg,png,gif,svg,webp}"`,
  );
